<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".FaqActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="416dp"
        android:layout_height="93dp"
        android:text="FAQ"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="#E6280680"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="560dp"
        android:orientation="vertical"
        android:background="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:drawableRight="@drawable/ic_question_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/faq_first"
            android:textSize="18sp"


            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:text="@string/faq_second"

            android:textSize="18sp"
            android:drawableRight="@drawable/ic_question_white"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:drawableRight="@drawable/ic_question_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/faq_third"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:drawableRight="@drawable/ic_question_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/faq_fourth"
            android:textSize="18sp"
             />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>